---
const { servicio } = Astro.props;
---
<a href={`/servicios/${servicio.slug}`}>
<div  class="relative bg-white shadow-xl rounded-lg p-4 text-center transition-transform transform hover:scale-105 hover:shadow-2xl flex flex-col h-full before:absolute before:top-0 before:left-0 before:w-full before:h-2 before:bg-black/5 before:rounded-t-lg">
  
  <img src={servicio.imagen} alt={servicio.nombre} class="w-full h-40 object-cover rounded-t-lg" />
  
  <div class="flex-grow flex flex-col justify-between">
    <h2 class="text-xl font-semibold mt-4">{servicio.nombre}</h2>
    <p class="text-gray-600 flex-grow">{servicio.descripcion}</p>
  </div>
  
  <a href={`/servicios/${servicio.slug}`} class="mt-4 inline-block bg-blue-600 text-white px-4 py-2 rounded self-center">
    Comprar
  </a>

</div>
</a>