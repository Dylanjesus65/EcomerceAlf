---
import '@fortawesome/fontawesome-free/css/all.min.css';
import Layout from '../layouts/Layout.astro';
---
<Layout>
    <footer
    class="bg-white-100 text-orange-600 py-4 px-6 md:px-12 flex flex-col md:flex-row justify-between items-center border-t">
    <div class="flex flex-col md:flex-row items-center md:items-start w-full">
        <div class="flex flex-col items-center md:items-start md:w-1/3 mb-4 md:mb-0">
            <div class="flex space-x-4 text-white text-2xl">
                <a href="https://www.instagram.com/alfseguridadysalud/" target="_blank" aria-label="Instagram"
                    class="hover:text-purple-600"><i class="fab fa-instagram"></i></a>
                <a href="https://www.facebook.com/alfseguridadysalud" target="_blank" aria-label="YouTube"
                    class="hover:text-blue-600"><i class="fab fa-facebook"></i></a>
                <a href="https://www.linkedin.com/in/alf-seguridad-y-salud/" aria-label="LinkedIn" target="_blank" class="hover:text-blue-400"><i
                        class="fab fa-linkedin"></i></a>
            </div>
            <span class="text-sm text-white mt-2">Redes Sociales</span>
        </div>

        <div class="flex flex-col items-center md:items-start md:w-1/3 mb-4 md:mb-0">
            <h4 class="font-semibold text-yellow-600">Contacto</h4>
            <a href="https://wa.me/593992738731?text=Me%20gustar%C3%ADa%20obtener%20m%C3%A1s%20informaci%C3%B3n%20sobre%20sus%20servicios." class="text-white">+593 99 273 8731</a>
            <p class="text-white">info@alfseguridadysalud.com</p>
        </div>

        <a href="/" class="flex items-center md:items-start md:w-1/3 justify-center md:justify-end">
            <img   src="/logo2.png" alt="ALF Seguridad y Salud" class="h-10 max-w-[150px] object-contain hidden sm:block">
        </a>
    </div>
</footer>
</Layout>