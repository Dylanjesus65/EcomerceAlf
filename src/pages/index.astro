  <script>
    function animateCounter(element: HTMLElement, finalCount: number) {
  let count = parseInt(element.textContent ?? '0');
  if (count >= finalCount) return;

  const duration = 2000;
  const increment = Math.ceil(finalCount / (duration / 16));

  function updateCounter() {
    count += increment;
    element.textContent = count > finalCount ? finalCount.toString() : count.toString();
    if (count < finalCount) {
      requestAnimationFrame(updateCounter);
    } else {
      element.dataset.animated = 'true';
    }
  }

  updateCounter();
}

const countersSection = document.getElementById('counters-section');

if (countersSection) {
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const counters = countersSection.querySelectorAll('.counter');
        counters.forEach(counter => {
          if (counter instanceof HTMLElement && counter.dataset.animated === 'false') {
            const finalCount = parseInt(counter.dataset.final || '0');
            animateCounter(counter, finalCount);
          }
        });
        // observer.unobserve(countersSection);
      }
    });
  }, {
    threshold: 0.5
  });

  observer.observe(countersSection);
}
  </script>

