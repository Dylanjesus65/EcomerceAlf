---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <Header />

  <!-- Sección Hero -->
  <section class="relative bg-gray-900 text-white text-center py-28">
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('/contact-bg.jpg'); opacity: 0.3;"></div>
    <div class="relative z-10">
      <h1 class="text-5xl font-bold">¡Hablemos!</h1>
      <p class="text-xl mt-4 text-gray-300">Déjanos un mensaje y te responderemos lo antes posible.</p>
    </div>
  </section>

  <!-- Información de contacto -->
  <section class="py-20 container mx-auto text-center">
    <h2 class="text-4xl font-bold text-gray-900">¿Cómo contactarnos?</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mt-12">
      <div class="bg-white shadow-lg rounded-lg p-6">
        <img src="/icon-phone.png" class="w-12 mx-auto mb-4" alt="Teléfono" />
        <h3 class="text-xl font-semibold">Llámanos</h3>
        <p class="text-gray-600 mt-2">+593992738731</p>
      </div>
      <div class="bg-white shadow-lg rounded-lg p-6">
        <img src="/icon-email.png" class="w-12 mx-auto mb-4" alt="Email" />
        <h3 class="text-xl font-semibold">Escríbenos</h3>
        <p class="text-gray-600 mt-2">info@tuempresa.com</p>
      </div>
      <div class="bg-white shadow-lg rounded-lg p-6">
        <img src="/icon-location.png" class="w-12 mx-auto mb-4" alt="Ubicación" />
        <h3 class="text-xl font-semibold">Visítanos</h3>
        <p class="text-gray-600 mt-2">Quito, Ecuador</p>
      </div>
    </div>
  </section>

  <!-- Formulario de contacto -->
  <section class="py-20 bg-gray-100">
    <div class="container mx-auto max-w-2xl">
      <h2 class="text-4xl font-bold text-center text-gray-900">Déjanos un mensaje</h2>
      <form class="mt-8 bg-white shadow-lg rounded-lg p-8">
        <div class="mb-4">
          <label class="block text-gray-700 font-semibold">Nombre</label>
          <input type="text" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none" placeholder="Tu nombre" required />
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 font-semibold">Correo Electrónico</label>
          <input type="email" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none" placeholder="tucorreo@ejemplo.com" required />
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 font-semibold">Mensaje</label>
          <textarea class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none" rows="5" placeholder="Escribe tu mensaje aquí..." required></textarea>
        </div>
        <button type="submit" class="w-full bg-blue-600 text-white py-3 rounded-lg text-lg font-semibold hover:bg-blue-700">
          Enviar Mensaje
        </button>
      </form>
    </div>
  </section>

  <!-- Mapa (Opcional) -->
  <section class="py-20 container mx-auto text-center">
    <h2 class="text-4xl font-bold text-gray-900">Nuestra ubicación</h2>
    <p class="text-gray-600 mt-4">Encuéntranos en Quito, Ecuador</p>
    <div class="mt-8">
      <iframe
        class="w-full h-96 rounded-lg shadow-lg"
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15916.746834789767!2d-78.5076899!3d-0.1806532!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x91d59a2fadc66f1b%3A0x2b7e9e8e50e53e20!2sQuito%2C%20Ecuador!5e0!3m2!1ses!2sec!4v1709123456789"
        allowfullscreen
        loading="lazy"
      ></iframe>
    </div>
  </section>

  <Footer />
</Layout>
