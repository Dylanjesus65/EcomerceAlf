<script is:inline>
  // Esperamos a que la página se cargue completamente
  document.addEventListener('DOMContentLoaded', () => {
    // Seleccionamos todas las barras de progreso
    const progressBars = document.querySelectorAll('.progress-bar');
    const progressPercents = document.querySelectorAll('.progress-percent');
    
    // Función para animar una barra específica
    function animateBar(bar, percentText) {
      const target = parseInt(bar.getAttribute('data-target')) || 100;
      let width = 0;
      
      // Reiniciar la barra a 0%
      bar.style.width = '0%';
      percentText.textContent = '0%';
      
      // Animación gradual con requestAnimationFrame para mejor rendimiento
      function animate() {
        if (width < target) {
          width += 1;
          bar.style.width = width + '%';
          percentText.textContent = width + '%';
          requestAnimationFrame(animate);
        }
      }
      
      // Iniciar la animación
      requestAnimationFrame(animate);
    }
    
    // Crear un observer para cada barra
    progressBars.forEach((bar, index) => {
      const percentText = progressPercents[index];
      
      // Crear un nuevo IntersectionObserver para cada barra
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            // Animar la barra cuando sea visible
            setTimeout(() => {
              animateBar(bar, percentText);
            }, index * 100); // Pequeño retraso para que las barras se animen en secuencia
            
            // Desconectar el observer una vez que se ha activado
            observer.unobserve(entry.target);
          }
        });
      }, { threshold: 0.5, rootMargin: '0px' });
      
      // Empezar a observar la barra
      observer.observe(bar);
    });
    
    // También activar la animación si hacemos scroll manualmente a la sección
    function checkIfVisible() {
      const section = document.querySelector('.progress-section');
      if (!section) return;
      
      const rect = section.getBoundingClientRect();
      const isVisible = rect.top < window.innerHeight && rect.bottom >= 0;
      
      if (isVisible) {
        progressBars.forEach((bar, index) => {
          const percentText = progressPercents[index];
          setTimeout(() => {
            animateBar(bar, percentText);
          }, index * 100);
        });
        
        // Remover el event listener una vez activado
        window.removeEventListener('scroll', checkIfVisible);
      }
    }
    
    // Verificar visibilidad también en el scroll
    window.addEventListener('scroll', checkIfVisible);
    
    // Verificar inmediatamente por si la sección ya está visible
    checkIfVisible();
  });
</script>
